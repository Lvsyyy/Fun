local Players = game:GetService("Players")
local playerName = ""
local function ignorePlayer()
    local targetName = tostring(playerName)
    local targetPlayer = Players:FindFirstChild(targetName)

    game:GetService("ReplicatedStorage"):WaitForChild("DefaultChatSystemChatEvents"):WaitForChild("MutePlayerRequest"):InvokeServer(targetPlayer)
    
    if targetPlayer and targetPlayer.Character then
        for _, descendant in ipairs(targetPlayer.Character:GetDescendants()) do
            if descendant:IsA("BasePart") or descendant:IsA("MeshPart") then
                descendant.Transparency = 1
                targetPlayer.Character.Head.face.Transparency = 1
            end
        end
    end
        for _, accessory in ipairs(targetPlayer.Character:GetAccessories()) do
            accessory.Handle.Transparency = 1
        end
        for _, sound in ipairs(targetPlayer.Character.HumanoidRootPart:GetDescendants()) do
            if descendant:IsA("Sound") then
            sound.Volume = 0
        end
    end
end
ignorePlayer()
